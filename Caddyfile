:80 {
    encode gzip

    # Serve STATIC files
    @static path /static/*
    handle @static {
        root * /app/staticfiles
        file_server
    }

    # Serve MEDIA files
    @media path /media/*
    handle @media {
        root * /app
        file_server
    }

    # Everything else goes to Django
    handle {
        reverse_proxy web:8000
    }
}